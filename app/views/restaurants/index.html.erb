<div class="container mt-5">
  <div class="row">
    <div class="col-12 text-center mb-4">
      <h1 class="display-4">All Restaurants</h1>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-12 text-center">
      <%= link_to 'New Restaurant', new_restaurant_path, class: "btn btn-primary btn-lg" %>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <ul class="list-group">
        <% @restaurants.each do |restaurant| %>
          <li class="list-group-item">
            <%= link_to restaurant.name, restaurant_path(restaurant), class: "text-decoration-none text-dark" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
