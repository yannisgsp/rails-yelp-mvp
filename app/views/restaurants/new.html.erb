<div class="container mt-5">
  <div class="row">
    <div class="col-12 text-center mb-4">
      <h1 class="display-4">New Restaurant</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%= simple_form_for @restaurant do |f| %>
        <div class="form-group mb-3">
          <%= f.input :name, input_html: { class: 'form-control' } %>
        </div>
        <div class="form-group mb-3">
          <%= f.input :address, input_html: { class: 'form-control' } %>
        </div>
        <div class="form-group mb-3">
          <%= f.input :phone_number, input_html: { class: 'form-control' } %>
        </div>
        <div class="form-group mb-3">
          <%= f.input :category, collection: Restaurant::CATEGORIES, input_html: { class: 'form-control' } %>
        </div>
        <div class="form-group">
          <%= f.button :submit, 'Create Restaurant', class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
