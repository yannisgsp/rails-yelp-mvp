<div class="container mt-5">
  <div class="row">
    <div class="col-12 text-center mb-4">
      <h1 class="display-4"><%= @restaurant.name %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <p><strong>Address:</strong> <%= @restaurant.address %></p>
      <p><strong>Phone number:</strong> <%= @restaurant.phone_number %></p>
      <p><strong>Category:</strong> <%= @restaurant.category %></p>
      <hr>
      <h3>Reviews</h3>
      <% @restaurant.reviews.each do |review| %>
        <div class="card mb-3">
          <div class="card-body">
            <p class="card-text"><%= review.content %></p>
            <p class="card-text"><strong>Rating:</strong> <%= review.rating %>/5</p>
          </div>
        </div>
      <% end %>
      <hr>
      <h3>Add a Review</h3>
      <%= simple_form_for [@restaurant, @review], html: { class: 'mb-4' } do |f| %>
        <div class="form-group">
          <%= f.input :content, label: 'Content', input_html: { class: 'form-control' } %>
        </div>
        <div class="form-group">
          <%= f.input :rating, label: 'Rating', input_html: { class: 'form-control' } %>
        </div>
        <div class="form-group">
          <%= f.button :submit, 'Add Review', class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
