<div class="container mt-5">
  <div class="row">
    <div class="col-12 text-center mb-4">
      <h1 class="display-4">New Review for <%= @restaurant.name %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <div class="form-group mb-3">
          <%= f.input :content, input_html: { class: 'form-control' } %>
        </div>
        <div class="form-group mb-3">
          <%= f.input :rating, input_html: { class: 'form-control' } %>
        </div>
        <div class="form-group">
          <%= f.button :submit, 'Add Review', class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
      <%= link_to 'Back to Restaurant', restaurant_path(@restaurant), class: "btn btn-secondary btn-lg mt-3" %>
    </div>
  </div>
</div>
